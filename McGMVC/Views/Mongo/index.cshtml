@model IEnumerable<McGMVC.Models.Book>
@{
    ViewBag.Title = "MongoDB";
}

<div id="tableContainer">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th></th>
                <th>ID</th>
                <th>Title</th>
                <th>Author</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                var counter = 1;
                foreach (var item in Model)
                {
                    <tr id="@item._id">
                        <td class="tableButtons"><button id="delBookMongoBtn" class="btn btn-danger" type="button">Delete</button></td>
                        <td>@counter</td>
                        <td>@item.title</td>
                        <td>@item.author</td>
                        <td class="tableButtons"><button id="editBookMongoBtn" data-toggle='modal' role='button' class='btn' href='#editBookModal'>Edit</button></td>
                    </tr>
                    counter++;
                }
            }
        </tbody>
    </table>
    <button id="addBookMongoBtn" class="btn" href='#addBookModal' data-toggle='modal' role='button'>Add Book</button>
</div>

<div id="addBookModal" class="modal hide fade">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Add Book</h3>
    </div>
    <div class="modal-body">
        <h4>Book Title</h4>
        <input id="bookTitleInput" type="textfield">
        <h4>Author</h4>
        <input id="bookAuthorInput" type="textfield">
    </div>
    <div class="modal-footer">
        <a href="#" class="btn">Close</a>
        <a id="saveBtnAddBookMongo" href="#" class="btn btn-primary">Save changes</a>
    </div>
</div>

<div id="editBookModal" class="modal hide fade">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Edit Book</h3>
    </div>
    <div class="modal-body">
        <h4>Book Title</h4>
        <input id="bookTitleInputEdit" type="textfield">
        <h4>Author</h4>
        <input id="bookAuthorInputEdit" type="textfield">
    </div>
    <div class="modal-footer">
        <a href="#" class="btn">Close</a>
        <a id="saveBtnEditBookMongo" href="#" class="btn btn-primary">Save changes</a>
    </div>
</div>
